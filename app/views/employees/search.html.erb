
<%# 個別CSSの読み込み %>
<%= stylesheet_link_tag "header_icons/employee", :media => "all" %>

<%# ヘッダー部分テンプレートの読み込み %>
<%= render partial:"shared/header" %>

<div class="wrapper">

  <%# サイドバー %>
  <div class="side-bar">
    <%# サイドバー部分テンプレートの読み込み %>
    <%= render partial:"shared/side_bar/employee" %>
  </div>

  <%# メイン画面 %>
  <div class="main-wrapper --user">
    <% if @results.length != 0 %>
      <%= render partial:"shared/repeat/user/employee", collection: @results, as: "employee" %>
    <% else %>
      該当する社員が見つかりませんでした。
    <% end %>
  </div>

</div>