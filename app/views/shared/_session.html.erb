<div class='session-header'>
  <%= image_tag("logo.png", class:"session-logo-icon") %>
  <p class='session-header-text'><%= user_name %>ログインページ</p>
</div>

<div class="session-wrapper"> 

  <%= form_with model: user, url: user_session_path, method: :post, class: 'session-main', local: true do |f| %>

    <div class="session-field">
      <%= f.label :email, 'メールアドレス', class:"session-label" %></br>
      <%= f.email_field :email, class:"session-input", autofocus: true, autocomplete: "email", placeholder:"メールアドレス" %>
    </div>

    <div class="session-field">
      <%= f.label :password, 'パスワード', class:"session-label" %></br>
      <%= f.password_field :password, class:"session-input", autocomplete: "current-password", placeholder:"パスワード" %>
    </div>

    <div class="session-actions">
      <%= f.submit "ログイン", class:"login-btn" %>
    </div>

  <% end %>

  <%= link_to "--- #{ another_user_name }の方はこちらへ ---", another_user_session_path, class:"to-login" %>
</div>