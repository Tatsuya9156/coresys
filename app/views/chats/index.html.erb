
<%# 個別CSSの読み込み %>
<%= stylesheet_link_tag "header_icons/chat", :media => "all" %>

<%# ヘッダー部分テンプレートの読み込み %>
<%= render partial:"shared/header" %>

<%# チャットグループ作成の部分テンプレートの読み込み %>
<%= render partial:"shared/form/chat/create" %>

<div class="wrapper">

  <%# サイドバー部分テンプレートの読み込み %>
  <div class="side-bar">
    <%= render partial:"shared/side_bar/chat" %>
  </div>

  <div class="main-wrapper">
    <%# 背景動画 %>
    <%= video_tag("/videos/chat.mp4", autoplay: :true, loop: :true, muted: :true, class: "chat-video") %>
  </div>

</div>