<div class="session-wrapper">
  <div class='session-header'>
    <%= image_tag("logo.png", class:"session-logo-icon") %>
    <p class='session-header-text'>職人ログインページ</p>
  </div>

  <%= form_with model: @employee, url: employee_session_path, method: :post, class: 'session-main', local: true do |f| %>

  <div class="field">
    <%= f.label :email, 'メールアドレス' %></br>
    <%= f.email_field :email, class:"input-field", autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, 'パスワード' %></br>
    <%= f.password_field :password, class:"input-field", autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "ログイン", class:"login-btn" %>
  </div>

  <% end %>

  <%= link_to "--- 社員の方はこちらへ ---", employee_session_path, class:"to-login" %>
</div>