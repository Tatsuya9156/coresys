
<%# 個別CSSの読み込み %>
<%= stylesheet_link_tag "header_icons/worker", :media => "all" %>

<%= render partial:"shared/header" %>

<div class="wrapper">

  <div class="side-bar">
    <div class="search-area">
      <input type="text" class="search-form" placeholder="フリーワード検索">
    </div>
  </div>

  <div class="main-wrapper user-wrapper">

    <% @workers.each do |worker| %>
      <div class="user-card worker-card">
        <div class="user-card--face">
          <% if worker.face_image.present? %>
            <%= image_tag worker.face_image.variant(resize: '100x100'), class: 'face-image' %>
          <% else %>
            <%= image_tag 'face_image_sample', size: "100x100", class: 'face-image' %>
          <% end %>
        </div>
        <div class="user-card--info">
          <div class="user-card--info--child">
            <div class="user-card--info--child--tag">職人ID</div>
            <div class="user-card--info--child--value"><%= worker.worker_number %></div>
          </div>
          <div class="user-card--info--child">
            <div class="user-card--info--child--tag">屋号</div>
            <div class="user-card--info--child--value"><%= worker.trade_name %></div>
          </div>
          <div class="user-card--info--child">
            <div class="user-card--info--child--tag">名前</div>
            <div class="user-card--info--child--value"><%= worker.name %>(<%= worker.name_kana %>)</div>
          </div>
          <div class="user-card--info--child">
            <div class="user-card--info--child--tag">TEL</div>
            <div class="user-card--info--child--value"><%= worker.phone %></div>
          </div>
          <div class="user-card--info--child">
            <div class="user-card--info--child--tag">Email</div>
            <div class="user-card--info--child--value"><%= worker.email %></div>
          </div>

          <div class="user-card-info-child user-card-info-title">ー 住所(居住地) ー</div>

          <div class="user-card--info--child">
            <div class="user-card--info--child--tag">郵便番号</div>
            <div class="user-card--info--child--value"><%= worker.address_zip %></div>
          </div>
          <div class="user-card--info--child">
            <div class="user-card--info--child--tag">住所</div>
            <div class="user-card--info--child--value"><%= worker.address %></div>
          </div>
        </div>
      </div>
    <% end %>

  </div>

</div>